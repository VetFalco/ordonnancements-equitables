<Window x:Class="OrdonnancementsEquitables.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrdonnancementsEquitables"
        mc:Ignorable="d"
        xmlns:resx="clr-namespace:OrdonnancementsEquitables.Properties"
        Title="{x:Static resx:Resources.AppName}"
        WindowStartupLocation="CenterScreen"
        Height="450" Width="800" MinHeight="370" MinWidth="500">
        <!--
        Icon="{x:Static resx:Resources.AppIcon}"
        -->
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <ComboBox 
            Name="SelAlgo" Text="select algo"
            Grid.Column="0" Grid.Row="0"
            VerticalAlignment="Center" Margin="10,0"
            SelectionChanged="ComboBox_SelectionChanged"/>
        <TextBox
            MaxLines="1"
            Grid.Column="1" Grid.Row="0"
            Margin="10,0" VerticalAlignment="Center"
            IsReadOnly="True" Name="filePath" 
            TextWrapping="NoWrap" Text="Select file..."/>
        <Button 
            Click="SelectionFile" Name="FileSelectorButton"
            VerticalAlignment="Center" Margin="10,0"
            Grid.Column="2" Grid.Row="0" 
            Content="Select file"/>
        <ScrollViewer
            VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Visible"
            Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="2" >
            <Image
                Grid.ColumnSpan="2" Grid.Row="2"
                Margin="10" VerticalAlignment="Stretch" HorizontalAlignment="Left"
                Source="Assets/Img/proxy-image.jpg" Stretch="Fill"/>
        </ScrollViewer>
        
        <StackPanel Grid.Column="1" Grid.Row="1"  HorizontalAlignment="Left" VerticalAlignment="Stretch">
            <StackPanel.Resources>
                <Style TargetType="{x:Type CheckBox}">
                    <Setter Property="Margin" Value="5"/>
                    <Setter Property="HorizontalAlignment" Value="Left"/>
                </Style>
            </StackPanel.Resources>
            
            <CheckBox Content="CheckBox" VerticalAlignment="Top"/>
            <CheckBox Content="CheckBox" VerticalAlignment="Top"/>
            <CheckBox Content="CheckBox" VerticalAlignment="Top"/>
        </StackPanel>
        <Button 
            Content="START" Background="Red"
            Grid.Column="2" Grid.Row="1"
            Margin="10" VerticalAlignment="Center"/>


    </Grid>
</Window>
