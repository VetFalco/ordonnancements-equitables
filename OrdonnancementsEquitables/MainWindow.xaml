<Window x:Class="OrdonnancementsEquitables.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrdonnancementsEquitables"
        mc:Ignorable="d"
        Icon="Assets/Img/icon.ico"
        Title="Ordonnancement Equitables" Height="450" Width="800" MinHeight="370" MinWidth="500">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <ComboBox 
            Name="SelAlgo" Text="select algo"
            Grid.Column="0" Grid.Row="0"
            VerticalAlignment="Center" Margin="10,0"
            SelectionChanged="ComboBox_SelectionChanged"/>
        <TextBox
            MaxLines="1"
            Grid.Column="1" Grid.Row="0"
            Margin="10,0" VerticalAlignment="Center"
            IsReadOnly="True" Name="filePath" 
            TextWrapping="NoWrap" Text="Select file..."/>
        <Button 
            Click="SelectionFile" Name="FileSelectorButton"
            VerticalAlignment="Center" Margin="10,0"
            Grid.Column="2" Grid.Row="0" 
            Content="Select file"/>
        <ScrollViewer
            VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Visible"
            Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="2" >

            <Viewbox>
                <Canvas Width="800" Height="500" Name="screen">
                    <Ellipse Panel.ZIndex="2" Fill="Gainsboro" Canvas.Left="25" Canvas.Top="25" Width="200" Height="200" />
                    <Rectangle Panel.ZIndex="3" Fill="LightBlue" Canvas.Left="25" Canvas.Top="25" Width="50" Height="50" />
                    <Rectangle Panel.ZIndex="2" Fill="LightCoral" Canvas.Left="50" Canvas.Top="50" Width="500" Height="50" />
                    <Rectangle Panel.ZIndex="4" Fill="LightCyan" Canvas.Left="75" Canvas.Top="175" Width="50" Height="207" />
                </Canvas>
            </Viewbox>

        </ScrollViewer>
        
        <StackPanel Grid.Column="1" Grid.Row="1"  HorizontalAlignment="Left" VerticalAlignment="Stretch">
            <StackPanel.Resources>
                <Style TargetType="{x:Type CheckBox}">
                    <Setter Property="Margin" Value="5"/>
                    <Setter Property="HorizontalAlignment" Value="Left"/>
                </Style>
            </StackPanel.Resources>
            
            <CheckBox Content="CheckBox" VerticalAlignment="Top"/>
            <CheckBox Content="CheckBox" VerticalAlignment="Top"/>
            <CheckBox Content="CheckBox" VerticalAlignment="Top"/>
        </StackPanel>
        <Button 
            Content="START" Background="Red"
            Grid.Column="2" Grid.Row="1"
            Margin="10" VerticalAlignment="Center"/>


    </Grid>
</Window>
