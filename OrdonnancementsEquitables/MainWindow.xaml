<Window x:Class="OrdonnancementsEquitables.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrdonnancementsEquitables"
        mc:Ignorable="d"
        Title="Ordonnancement Equitables" Height="450" Width="800" MinWidth="500">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <ComboBox 
            Name="selAlgo"
            Text="select algo"
            Grid.Column="0" Grid.Row="0"
            Height="20" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Stretch"
            SelectionChanged="ComboBox_SelectionChanged"/>
        <TextBox 
            IsReadOnly="True" Name="filePath" 
            Grid.Column="1" Grid.Row="0" 
            HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="20" Margin="25,10,95,0"
            TextWrapping="Wrap" Text="TextBox"/>
        <Button
            Grid.Column="1" Grid.Row="0"
            Content="Select file"
            HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="75"/>
        <ScrollViewer
            VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Visible"
            Grid.ColumnSpan="2" Grid.Row="2" >
            <Image
                Grid.ColumnSpan="2" Grid.Row="2"
                Margin="10" VerticalAlignment="Stretch" HorizontalAlignment="Left"
                Source="Assets/Img/proxy-image.jpg" Stretch="Fill"/>
        </ScrollViewer>
        
        <StackPanel Grid.Column="1" Grid.Row="1"  HorizontalAlignment="Left" VerticalAlignment="Stretch"  Width="100" >
            <StackPanel.Resources>
                <Style TargetType="{x:Type CheckBox}">
                    <Setter Property="Margin" Value="5"/>
                    <Setter Property="HorizontalAlignment" Value="Left"/>
                </Style>
            </StackPanel.Resources>
            
            <CheckBox Content="CheckBox" VerticalAlignment="Top"/>
            <CheckBox Content="CheckBox" VerticalAlignment="Top"/>
            <CheckBox Content="CheckBox" VerticalAlignment="Top"/>
        </StackPanel>
        <Button Content="START" Grid.Column="1" HorizontalAlignment="Right" Margin="10" Grid.Row="1" VerticalAlignment="Center" Width="75"
                Background="Red"/>


    </Grid>
</Window>
